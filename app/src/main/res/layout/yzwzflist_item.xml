<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/img_launch_ball_games_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/bg_qingtong" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/yzlist_item_tv_yz_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="游戏名:"
                    android:textColor="@color/hui_text"
                    android:textSize="@dimen/fragment_yeuzhan_need_size" />

                <TextView
                    android:id="@+id/yzlist_item_tv_need_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/fragment_yeuzhan_need_persons_magin_right"
                    android:text=" 玩家数:"
                    android:textColor="@color/hui_text"
                   android:textSize="@dimen/fragment_yeuzhan_need_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/yzlist_item_tv_yz_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="服务器:"
                    android:textColor="@color/hui_text"
                    android:textSize="@dimen/fragment_yeuzhan_need_size" />

                <TextView
                    android:id="@+id/yzlist_item_tv_pay_peple_money_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/yzlist_item_tv_pay_peple_money"
                    android:text="支付:"
                    android:textColor="@color/hui_text" 
                    android:textSize="@dimen/fragment_yeuzhan_need_size" />

                <TextView
                    android:id="@+id/yzlist_item_tv_pay_peple_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/fragment_fq_list_magin_right"
                    android:text="支付:"
                    android:textColor="@color/hui_text"
                    android:textSize="@dimen/fragment_yeuzhan_need_size"  />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/yzlist_item_tv_yz_name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="发起人:  "
                    android:textColor="@color/hui_text"
                    android:textSize="@dimen/fragment_yeuzhan_need_size"  />
                <TextView
                    android:id="@+id/yzlist_item_tv_yz_name"
                    android:layout_toRightOf="@+id/yzlist_item_tv_yz_name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="发起人:"
                    android:textColor="@color/hui_text"
                    android:textSize="@dimen/fragment_yeuzhan_need_size" 
                    android:maxEms="4" 
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/yzlist_item_tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="时间"
                    android:textColor="@color/hui_text"
                     android:layout_marginRight="@dimen/fragment_yeuzhan_need_starttime_magin_right"
                    android:textSize="@dimen/fragment_yeuzhan_need_size"  />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/yzlist_item_cancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_ok"
            android:clickable="true"
            android:gravity="center"
            android:text="取消订单"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/yzlist_item_begin"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_ok"
            android:clickable="true"
            android:gravity="center"
            android:text="确认支付"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>