<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff2"
    android:orientation="vertical" >

    <!-- 开黑订单详情 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eceff2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="需要人数:" >
        </TextView>

        <TextView
            android:id="@+id/activity_zflist_xyrs"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/zhifu_bg"
            android:text="需要人数" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="平台费用:" >
        </TextView>

        <TextView
            android:id="@+id/activity_zflist_ptfy"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/zhifu_bg"
            android:text="平台费用" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="单人费用:" />

        <TextView
            android:id="@+id/activity_zflist_drfy"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/zhifu_bg"
            android:text="单人费用:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f75256"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="总费用"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/activity_zflist_zfy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10.00"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <!-- 确定订单 -->

        <TextView
            android:id="@+id/activity_zflist_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#263444"
            android:clickable="true"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>