<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- 选择支付选项 -->
    <!-- 标题布局 -->

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bar_color"
        android:gravity="center_vertical" >

        <!-- 返回到订单详情UI -->

        <include
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            layout="@layout/commom_back_btn" />

        <TextView
            android:id="@+id/activity_yzlist_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="@string/pay"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eceff2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红包:" >
        </TextView>

        <TextView
            android:id="@+id/activity_zf_two_change"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/zhifu_bg"
            />

        <CheckBox
            android:id="@+id/activity_zf_two_cb_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="选中消费"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包:" >
        </TextView>

        <TextView
            android:id="@+id/activity_zf_two_income"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/zhifu_bg"
            />

        <CheckBox
            android:id="@+id/activity_zf_two_cb_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选中消费"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_zf_two_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1_3_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/zhifu_wechat" />

        <CheckBox
            android:id="@+id/activity_zf_two_cb_weichat"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="0.37"
            android:text="选中消费"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1_3_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/zhifu_zfb" />

        <CheckBox
            android:id="@+id/activity_zf_two_cb_zfb"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="0.44"
            android:text="选中消费"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/activity_zf_two_confirm"
            android:layout_width="251dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="58dp"
            android:layout_weight="0.06"
            android:background="@drawable/blue_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="支付"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/note" />

        <TextView
            android:id="@+id/activity_zf_two_confirm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:lineSpacingExtra="3dp"
            android:text="用零钱包及收入包支付时,不足部分可用微信或支付宝支付补足,也可直接用微信或者支付宝支付全额。" />
    </LinearLayout>

</LinearLayout>